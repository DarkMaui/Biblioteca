<div class="card">

    <div class="card-header bg-primary" >
        <h3 class="card-tittle text-white">
            <i class="far fa-file-pdf" style="color:red;"></i> Subir Tesis
        </h3>
    </div>
      <div class="card-body">
        <form action="/tesis" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" name="tesis" class="custom-file-input" id="inputGroup"
                            aria-describedby="inputGroupFileAddon" required>
                        <label class="custom-file-label" for="inputGroupFile">Subir archivo</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="text" name="title" class="form-control" placeholder="Titulo de la tesis" required>
            </div>
            <div class="form-group">
                <textarea name="description" id="" rows="2" class="form-control" placeholder="Ingrese descripcion"
                    required></textarea>
            </div>
            <div class="form-group">
                <label for="" placeholder="fecha">Fecha</label>
                <input type="date" name="date" class="form-control" max={{Date.now}} required>
            </div>
            <div class="form-group">
                <button class="btn btn-success">
                    <i class="fa fa-upload"></i> Guardar
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card mt-2">
    <div class="card-header bg-primary text-white">
        <h3> Tesis Recientes</h3>
     </div>
        <div class="card-body">
            <div class="row">
                {{#each todasTesis}}
            <div class="col-md-12">
                <a href="/tesis/{{uniqueId}}" style='text-decoration:none; color:dodgerblue'>
                    <h4 class="text">{{title}}</h4> 
                </a>
                <h5>{{Fecha fecha}}</h5>
                <br>
            </div>
            {{/each}}
            </div>
        </div>
    
</div>