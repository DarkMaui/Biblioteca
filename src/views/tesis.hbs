<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center bg-primary">
        <h2 class=" card-tittle text-white">{{tesis.title}}</h2>
        <button class="btn btn-danger" id="btn-delete" data-id="{{tesis.uniqueId}}">
            <i class="fa fa-times"></i> Eliminar
        </button>
    </div>
        <div class="card-body">
            
            <p>{{tesis.description}}</p>
            
                <a href="/tesis/pdf/{{tesis.uniqueId}}">
                    <h4>{{tesis.filename}}</h4></a>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between align-items-center ">
            <button class="btn btn-success" id="btn-like" data-id="{{tesis.filename}}">
                <i class="fas fa-thumbs-up"></i> like
            </button>
            <p>
                <span class="likes-count"> {{tesis.likes}}</span>
                <i class="fas fa-heart"></i>
            </p>
            <p>
                <i class="fas fa-eye"></i> {{tesis.views}}
            </p>
            <p>
                <i class="far fa-clock"></i>
                {{timeago tesis.Timestamp}}
            </p>

        </div>
